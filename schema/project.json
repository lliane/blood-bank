{
  "type": "object",
  "title": "project",
  "description": "A project",
  "name": "project",
  "properties": {
    "name": {
      "description": "the name of the project.",
      "required": true,
      "type": "string"
    },
    "description": {
      "description": "description text for a project.",
      "required": true,
      "type": "text"
    },
    "logo": {
      "description": "logo url.",
      "required": false,
      "type": "string"
    },
    "screenshot": {
      "description": "screenshot url.",
      "required": true,
      "type": "string"
    },
    "screenshot_small": {
      "description": "small screenshot url.",
      "required": true,
      "type": "string"
    },
    "url": {
      "description": "the link to a project.",
      "required": true,
      "type": "string"
    },
    "repository_url": {
      "description": "linkt to the repository.",
      "type": "string"
    },
    "twitter_name": {
      "description": "the twitter account to a project.",
      "type": "string"
    },
    "facebook_name": {
      "description": "the facebook account to a project.",
      "type": "string"
    },
    "people": {
      "type": "array",
      "items": {
        "type": "object",
        "person": {
          "slug": {
            "description": "a project member's slug (FIRSTNAME_LASTNAME)",
            "type": "string",
            "required": true
          },
          "contact_person": {
            "description": "defines whether this person is one of the project's contact persons",
            "type": "boolean"
          }
        }
      }
    },
    "relevance": {
      "description": "a project's relevance, from 1 (less important) to 5 (very important).",
      "type": "integer"
    },
    "owner": {
      "description": "the owner.",
      "type": "string"
    },
    "what_we_did": {
      "description": "a short text describing Railslove's part in this project.",
      "type": "string"
    },
    "project_type": {
      "description": "is this a client project or one of our own?",
      "type": "string"
    }
  }
}
